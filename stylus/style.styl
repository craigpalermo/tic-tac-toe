@import url("http://fonts.googleapis.com/css?family=Open+Sans:800italic,400,300")

grid = rgb(46,47,52)
piece-color = rgb(255,212,59)
bg-color = white
grid-weight = 15px

html
    height 100%
html, body
    background bg-color
    font-family 'Open Sans', sans-serif

.flex
    display flex
    height 100%
    justify-content space-around
    align-items center

table
    border-collapse collapse
.mid
    border-top grid-weight solid grid
    border-bottom grid-weight solid grid
.cen
    border-left grid-weight solid grid
    border-right grid-weight solid grid
#board td
    width 200px
    height 200px
    text-align center
    vertical-align middle
    font-size 6em
    font-weight 800
    color piece-color
    cursor hand
    cursor pointer

#info
    font-size 2em
    display flex
    flex-direction column
    justify-content flex-start
    height 60%
    color grid

#reset
    display flex
    align-items center
    justify-content center
    color grid
    padding 12px
    border 4px solid grid
    border-radius 15px
    width 170px
    cursor hand
    cursor pointer
