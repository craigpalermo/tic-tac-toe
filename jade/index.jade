head
  script(src='/js/vendor/jquery/jquery.js')
  script(src='https://cdn.firebase.com/js/client/1.0.17/firebase.js')
  script(src='/js/index.js')
  link(rel='stylesheet', href='/css/style.css')
  meta(name="viewport", content="width=device-width, user-scalable=no")

body
  div.content.flex
    div#info
      span#title
        span Firebase 
        span Tic Tac Toe
      div
        p You're <strong class='under'><span id='player'></span></strong>s
        p It's <strong class='under'><span id='whoseTurn'></span></strong>'s turn
        p <strong class='under'><span id='players'></span></strong> players currently online
        div#reset Reset

    div#board-container
      table#board
        tr
          td#1
          td#2.cen
          td#3
        tr
          td#4.mid
          td#5.mid.cen
          td#6.mid
        tr
          td#7
          td#8.cen
          td#9
  footer
    p Crafted by Craig, 2014
